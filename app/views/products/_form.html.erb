<%= simple_form_for @product, html: { :multipart => true } do |f| %>
 <div class="form-inputs">
  <%= f.label :title %>
  <%= f.text_field :title %> 
  </div>

  <div class="form-inputs">
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>

  <div class="form-inputs">
  <%= f.label :image_url %> 
  <%= f.file_field :imag_url %>
  </div>

  <div class="form-inputs">
  <%= f.label :price %> 
  <%= f.text_field :price %>
  </div>

  <div>
  <%= f.submit "Submit" %>
  </div>
</div>
<% end %>